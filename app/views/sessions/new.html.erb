<%= form_for :login, html: {class: "col-5"} do |f| %>
  <fieldset>
    <legend>登录</legend>
    <div class="form-group">
      <%= f.label :phone, "手机号码" %>
      <%= f.text_field :phone, autofocus: true, class: "form-control", autocomplete: 'off' %>
    </div>

    <div class="form-group">
      <%= f.label :password, '密码' %>
      <%= f.password_field :password, class: "form-control" %>
    </div>

    <%= f.submit "登录", class: "btn btn-primary" %>
  </fieldset>
<% end %>
